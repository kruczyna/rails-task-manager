<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <ul>
    <li>
      <%= check_box_tag "task_completed_#{task.id}", task.id, task.completed %>
      <% # The second argument (task.id) is the value assigned to the checkbox when it's checked %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{task.title}?"}
      %>
    </li>
  </ul>

<% end %>

<%= link_to "Add a new task", create_path %>
