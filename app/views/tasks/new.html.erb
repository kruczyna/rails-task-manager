<%= form_with model: @task do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label"%>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :details, class: "form-label"%>
    <%= f.text_field :details, class: "form-control"%>
  </div>
  <div class="mb-3">
    <%= f.label :completed, class: "form-label"%>
    <%= f.check_box :completed, class: "form-control"%>
  <div>
    <%= f.submit "Create Task", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to list", tasks_path %>
