
<div class="container mt-5">
  <!-- Task Title -->
  <h1 class="mb-4"><%= @task.title %></h1>

  <!-- Task Details -->
  <div class="card mb-4">
    <div class="card-body bg-light">
      <h3 class="card-title">Description:</h3>
      <p class="card-text"><%= @task.details %></p>
    </div>
  </div>

  <!-- Task Completed Status -->
  <div class="mb-4">
    <div class="form-check me-4">
      <input class="form-check-input" type="checkbox" <%= @task.completed ? 'checked' : '' %> disabled>
      <label class="form-check-label"><%= @task.completed ? 'Task is completed' : 'Task is not completed yet' %></label>
    </div>
  </div>

  <!-- Edit Task Link -->
  <%= link_to "Edit this task", edit_path(@task), class: "btn btn-primary" %>
</div>
